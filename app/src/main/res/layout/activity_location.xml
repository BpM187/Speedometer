<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LocationActivity">

    <!--header-->
    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorBrown">

        <!--header-->
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:padding="5dp"
            android:src="@drawable/icon_back_white" />

        <TextView
            android:id="@+id/txt_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_back"
            android:gravity="center_vertical"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />
    </RelativeLayout>


    <!--speed, altitude, distance-->
    <RelativeLayout
        android:id="@+id/rl_s"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/rl_header"
        android:background="@drawable/background_01">

        <!--speed elevation distance-->
        <TextView
            android:id="@+id/txt_altitude"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:alpha="0.5"
            android:background="@drawable/brown_template_odd_corners"
            android:gravity="center"
            android:padding="10dp"
            android:text="Elevation\n678.90"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_distance"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:alpha="0.5"
            android:background="@drawable/gray_template_odd_corners"
            android:gravity="center"
            android:padding="10dp"
            android:text="Distance\n678.90"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:alpha="0.8"
            android:scaleType="fitCenter"
            android:src="@drawable/template_speed_06" />

        <TextView
            android:id="@+id/txt_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingBottom="25dp"
            android:text="162"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/txt_speed_kph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_speed"
            android:layout_centerInParent="true"
            android:layout_marginTop="-30dp"
            android:alpha="0.8"
            android:fontFamily="@font/militech"
            android:gravity="center"
            android:text="km/h"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />

        <com.speedometer.calculator.app.util.ASurface
            android:id="@+id/surface"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:visibility="visible" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:max="220"
            android:progressDrawable="@drawable/custom_progress_bar"
            android:visibility="gone" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/txt_stop"
        android:layout_below="@id/rl_s">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_info_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1px" />

            <LinearLayout
                android:id="@+id/ll_results_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical" />

        </LinearLayout>


    </ScrollView>

    <!--shadow-->
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/rl_header"
        android:background="@drawable/shadow_top_01" />


    <!--shadow-->
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/rl_s"
        android:background="@drawable/shadow_top_01" />


    <!--stop-->
    <TextView
        android:id="@+id/txt_stop"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shadow_round_brown_01"
        android:gravity="center"
        android:text="@string/stop"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />
</RelativeLayout>